                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/imageView15"
                    app:layout_constraintTop_toBottomOf="@+id/textView17" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="152dp"
                    android:layout_height="124dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="39dp"
                    android:src="@drawable/phillps_vacummer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageMac" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/apple_macbook_m1_chip_2020"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/imageMac"
                    app:layout_constraintTop_toTopOf="@id/imageMac" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="45dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="172dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_shuttle"
                    app:layout_constraintStart_toEndOf="@+id/imageMac"
                    app:layout_constraintTop_toBottomOf="@+id/textViewMac" />

                <TextView
